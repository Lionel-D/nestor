{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'section_show_title'|trans }}{% endblock %}

{% block main %}
  <div class="container pt-5">
    <h1 class="display-4 $sectionList">{{ 'section_show_title'|trans }}</h1>

    <hr>

    <dl class="row">
      <dt class="col-md-4 text-right">{{ 'section_name'|trans }} :</dt>
      <dd class="col-md-8">{{ section.name }}</dd>

      <dt class="col-md-4 text-right">{{ 'section_description'|trans }} :</dt>
      <dd class="col-md-8">{{ section.description }}</dd>
    </dl>

    <hr>

    <a href="{{ path('app_section_index') }}" class="btn btn-sm btn-secondary">back to list</a>
    <a href="{{ path('app_section_edit', {'id': section.id}) }}" class="btn btn-sm btn-nestor">edit</a>
    {{ include('section/includes/_delete_form.html.twig') }}
  </div>
{% endblock %}
