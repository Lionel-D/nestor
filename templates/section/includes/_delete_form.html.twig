<form method="post" action="{{ path('app_section_delete', {'id': section.id}) }}" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>
